CREATE TABLE families (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    familyname TEXT UNIQUE NOT NULL,  -- 家族の名前 (ユニーク)
    magicspell_hash TEXT NOT NULL,    -- パスワードのハッシュ
    member_1 TEXT NOT NULL,  -- 家族メンバー 1 (必須)
    member_2 TEXT,           -- 家族メンバー 2
    member_3 TEXT,           -- 家族メンバー 3
    member_4 TEXT,           -- 家族メンバー 4
    member_5 TEXT            -- 家族メンバー 5
);

-- posts テーブル: 投稿情報を管理
CREATE TABLE posts (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    family_id INTEGER NOT NULL,      -- 投稿した家族の ID
    member_name TEXT NOT NULL,       -- 投稿した家族の誰か
    content TEXT NOT NULL,           -- 投稿の内容
    timestamp DATETIME DEFAULT CURRENT_TIMESTAMP,  -- 投稿日時 (デフォルトで現在時刻)
    FOREIGN KEY (family_id) REFERENCES families(id) ON DELETE CASCADE
);

-- indexes (検索速度向上のためのインデックス)
CREATE INDEX idx_familyname ON families(familyname);
CREATE INDEX idx_posts_family_id ON posts(family_id);
